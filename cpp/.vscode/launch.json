{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "PETCompUFRGS - g++ build and debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${fileDirname}/${fileBasenameNoExtension}",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${fileDirname}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set Disassembly Flavor to Intel",
                    "text": "-gdb-set disassembly-flavor intel",
                    "ignoreFailures": true
                }
            ],
            "windows": {
                "name": "PETCompUFRGS - g++ build and debug windows",
                "type": "cppdbg",
                "request": "launch",
                "program": "${fileDirname}/${fileBasenameNoExtension}.exe",
                // "miDebuggerPath": "${workspaceFolder}/.vscode/gdb.exe",
                "preLaunchTask": "gpp build active file windows",
            },
            "linux": {
                "name": "PETCompUFRGS - g++ build and debug linux",
                "type": "cppdbg",
                "request": "launch",
                "program": "${fileDirname}/${fileBasenameNoExtension}",
                "preLaunchTask": "gpp build active file linux",
                // "miDebuggerPath": "${workspaceFolder}/.vscode/gdb",
                "miDebuggerArgs": "-q -ex quit; wait() { fg >/dev/null; }; /bin/gdb -q --interpreter=mi"
            }
        }
    ]
}